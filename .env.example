# TranslatePro v4.0 - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - API Keys
# ===========================================

# Anthropic Claude API Key (for translation)
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API Key (for Whisper speech-to-text)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port (default: 3000)
PORT=3000

# Server host (default: localhost)
HOST=localhost

# Environment: development, production, test
NODE_ENV=development

# ===========================================
# DATABASE
# ===========================================

# SQLite database path
DATABASE_PATH=./data/translatepro.db

# ===========================================
# FILE STORAGE
# ===========================================

# Upload directory for temporary files
UPLOAD_DIR=./uploads

# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600

# ===========================================
# DEFAULTS
# ===========================================

# Default AI model for translation
# Options: claude-sonnet-4-20250514, claude-opus-4-20250514
DEFAULT_MODEL=claude-sonnet-4-20250514

# Default translation style
# Options: standard, formal, informal, technical, legal, marketing, literary, medical
DEFAULT_STYLE=standard

# ===========================================
# SECURITY
# ===========================================

# Session secret (generate a random string)
SESSION_SECRET=change-this-to-a-random-secret-string

# Rate limiting: window in milliseconds (default: 1 minute)
RATE_LIMIT_WINDOW=60000

# Rate limiting: max requests per window (default: 100)
RATE_LIMIT_MAX=100

# ===========================================
# LOGGING
# ===========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path (optional, logs to console if not set)
# LOG_FILE=./logs/app.log

# ===========================================
# OPTIONAL - ADVANCED
# ===========================================

# Maximum pages for PDF processing (default: 50)
# MAX_PDF_PAGES=50

# OCR resolution in DPI (default: 200)
# OCR_DPI=200

# Maximum audio duration in seconds (default: 1800 = 30 minutes)
# MAX_AUDIO_DURATION=1800

# Translation Memory minimum match percentage (default: 50)
# TM_MIN_MATCH=50

# Concurrent translation jobs per project (default: 3)
# CONCURRENT_TRANSLATIONS=3
